  <div class="col-sm-6 col-sm-offset-1">
    <h1>{{review.title}}</h1>
    <h2>{{review.movieTitle}}</h2>
    <p>{{review.description}}</p>
    <p>{{review.rating}}</p>
    <p><a href="/movies/{{review.movieId}}/reviews/{{review._id}}/edit">Edit</a></p>
    <p><form action="#" id="new-comment">
        <button class="btn btn-primary" type="submit">Delete</button>
    </form></p>
    <hr>



    {{> comment-form}}

    <div id="comments">
      {{#each comments}}
        {{> comment}}
      {{/each}}
    </div>
